<div class="flex flex-col md:flex-row justify-center bg-dark-blue">
{% include "logo.html.twig" %}
  <nav class="md:sticky top-0">
    <ul class="flex flex-col h-full overflow-hidden md:flex-row">
      {% for link in site.menu_links %}
        {% set isHome = link.url == "/" and page.url == "/." %}
        {% set isActive = link.url == page.url or isHome %}
        <li>
          <a class="flex flex-col h-full justify-center text-center text-white text-xl py-4 md:py-8 px-2 md:px-5 {{ isActive ? 'bg-purple underline': 'no-underline' }} hover:underline hover:bg-purple" href="{{ link.url }}">
          {{ link.title }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </nav>
</div>
